---
import '@fontsource/ubuntu-mono';
const base = import.meta.env.BASE_URL;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
		<link rel="icon" href={`${base}/favicon.ico`} />
		<meta name="generator" content={Astro.generator} />
		<title>Singleton</title>
    </head>
       
    <body>
        <nav>
            <a href=`${base}/`>Notes</a>
            <a href=`${base}/exercice`>Exercice</a>
        </nav>
        <div class="container">
            <slot />
        </div>
    </body>
    <footer>
        <p class="credits">Made with ❤️ by Max, Théo et Simon</p>
    </footer>
</html>

<style is:global>
	html,
    body {
        font-family: 'Ubuntu Mono', monospace;
		margin: 0;
		width: 100%;
        height: 100%;
        background-color: #1a1a1a;
        color: #DDE;
        overflow-x: hidden;
    }
        
    
    nav {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        background-color: #111111;
        padding: 1rem;
        gap: 2rem;
        position: sticky;
        top: 0;
        z-index: 10000;
        box-shadow: 0 0 5px #111111;
        a {
            color: #DDE;
            text-decoration: none;
            font-size: 1.5rem;
            font-weight: bold;
            transition: all 0.2s ease-in-out;
            &:hover {
                color: #F67583;
                transition: all 0.2s ease-in-out;
            }
        }
    }

    .container {
        width: 70%;
        margin: 2rem auto;
        font-size: 1.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: stretch;
    }
    h1 {
        color: #F67583;
    }

    h2 {
        font-size: 2rem;
        margin-bottom: 2rem;
        color: #F67583;
    }

    strong {
        color: #F67583;
    }

    section {
        margin-bottom: 2rem;
        margin-top: 2rem;
        strong {
            font-weight: bold;
        }
    }

    pre {
        max-width: 100%;
        overflow-x: auto;
    }

    .content {
        width: 100%;
    }

    .credits {
        text-align: center;
        font-size: 0.8rem;
        color: #666;
    }

</style>
